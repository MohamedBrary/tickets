.page-header
  = link_to tickets_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_ticket_path(@ticket), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  = link_to @ticket, data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-danger' do
    %span.glyphicon.glyphicon-trash
    Delete  
  %h1 Show ticket

%dl.dl-horizontal
  %dt Creation date:
  %dd= @ticket.created_at
  %dt Desc:
  %dd= @ticket.desc
  %dt Status:
  %dd= @ticket.status
  %dt Agent:
  %dd= @ticket.agent || "Not assigned yet"
  %dt Report:
  %dd= @ticket.report || "Not resolved yet"
  %dt Resolution date:
  %dd= @ticket.resolution_date || "Not resolved yet"
