.page-header
  = link_to tickets_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  %h1 New ticket

= form_for @ticket, html: { class: "form-horizontal", role: "form" } do |f|
  -if @ticket.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@ticket.errors.count, "error")} prohibited this ticket from being saved:"

      %ul
        - @ticket.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :desc, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :desc, class: 'form-control'
  .form-group
    = f.label :report, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :report, class: 'form-control'  
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'

