.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Customer
        - if assigned
          %th Agent        
        - if resolved
          %th Resolution date
        %th
        %th
        %th

    %tbody
      - listed_tickets.each do |ticket|
        %tr
          %td= ticket.customer
          - if assigned
            %td= ticket.agent
          - if ticket.resolved?
            %td= ticket.resolution_date
          %td= link_to 'Show', ticket
          / Admin isn't allowed to edit tickets
          %td= link_to 'Edit', edit_ticket_path(ticket)
          %td= link_to 'Destroy', ticket, data: { confirm: 'Are you sure?' }, method: :delete

